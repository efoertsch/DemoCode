<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fisincorporated.democode.ui.TransitionOptions"
    style="@style/AppTheme.MaterialMargins">


        <LinearLayout
            android:id="@+id/llEnterExitButtons"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginBottom="@dimen/listview_row_margin">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exit_animation"
                android:id="@+id/rbtnExitAnimation"
                android:layout_weight="1"
                android:textSize="@dimen/standard_text_size"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_animation"
                android:id="@+id/rbtnEnterAnimation"
                android:layout_weight="1"
                android:textSize="@dimen/standard_text_size"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/save" />

        <ListView
            android:id="@+id/lvAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button"
            android:layout_below="@+id/llEnterExitButtons"
            android:layout_gravity="center_horizontal|top"
            />

    </RelativeLayout>
